<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@anim/ensure_dialog_bg">

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dip"
                android:layout_marginRight="5dip"
                android:src="@drawable/close" />

                <TextView
                    android:id="@+id/text_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/distance_10"
                    android:layout_marginLeft="@dimen/distance_30"
                    android:textSize="20sp"
                    android:textColor="#515151"/>

                <TextView
                    android:id="@+id/text_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="确定放弃操作吗？"
                    android:layout_marginTop="10dip"
                    android:textColor="#515151"
                    android:layout_below="@+id/close_btn"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/btn_layout"
                    android:layout_below="@+id/text_context"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dip"
                    android:layout_marginBottom="30dip"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="取消"
                        android:textColor="@anim/dialog_cancel_btn_color"
                        android:background="@anim/dialog_cancel_btn_bg"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"/>

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginLeft="60dip"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:text="确定"
                        android:textColor="@anim/dialog_ensure_btn_color"
                        android:background="@anim/dialog_ensure_btn_bg"
                        android:paddingLeft="20dip"
                        android:paddingRight="20dip"/>
                </LinearLayout>
        </RelativeLayout>
</RelativeLayout>