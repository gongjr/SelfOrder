<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView 
        android:id="@+id/dishesitemtype_name"
    android:layout_width="wrap_content"
    android:layout_height="40dip"
    android:layout_marginLeft="@dimen/distance_20"
    android:layout_marginRight="@dimen/distance_20"
    android:gravity="center"
    android:textSize="@dimen/textsize_xlarge"
    android:layout_marginTop="@dimen/distance_20"/>

    <com.asiainfo.selforder.widget.FlowLayoutMargin
        android:id="@+id/dishesitemtype_flowLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance_10" >
        
    </com.asiainfo.selforder.widget.FlowLayoutMargin>

</LinearLayout>