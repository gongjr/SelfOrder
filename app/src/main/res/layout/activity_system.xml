<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/activity_root_style"
    android:background="#F8F8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <Button
            android:id="@+id/title_leftbtn"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="@anim/selector_btn_settle_back"
            />

        <TextView
            android:id="@+id/title_centertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="系统信息"
            android:textColor="@color/dark_red"
            android:textSize="32sp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/title_righttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_red"
            android:text="退出"
            android:layout_alignParentRight="true"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/marketing_underline01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />
    <TextView
        android:id="@+id/system_versionName"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="30dip"
        android:textSize="22sp"
        android:text="版本名称: 1.1.1"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/marketing_underline02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />
    <TextView
        android:id="@+id/system_versionCode"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="30dip"
        android:textSize="22sp"
        android:text="版本号: 1"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/marketing_underline03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />
    <TextView
        android:id="@+id/system_packagename"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="30dip"
        android:textSize="22sp"
        android:text="包名: kxmealorderapp "
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/marketing_underline04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />

    <TextView
        android:id="@+id/system_server_address"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="30dip"
        android:textSize="22sp"
        android:text="服务器地址: 测试环境 "
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/marketing_underline05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />

    <Button
        android:id="@+id/system_server_toinit"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="恢复默认"
        android:layout_marginLeft="30dip"
        android:padding="20dp"
        android:textSize="22sp"/>

    <ImageView
        android:id="@+id/marketing_underline06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E" />

</LinearLayout>