<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@anim/bg_corner_item_dishes_init"
        >
        <TextView
            android:id="@+id/item_dishes_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_20"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_5"
            android:textSize="@dimen/textsize_xxlarge"
            android:textColor="@color/item_dishes_init_name_text"
            android:text="牛腩"/>

        <TextView
            android:id="@+id/item_dishes_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_dishes_name"
            android:layout_marginTop="@dimen/distance_15"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_5"
            android:textSize="@dimen/textsize_xlarge_"
            android:singleLine="true"
            android:textColor="@color/item_dishes_init_describe_text"
            android:text="铁砂黑锅"
            android:visibility="gone"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_100"
            android:layout_marginLeft="@dimen/distance_60"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/distance_20"
            android:background="@color/item_dishes_init_price_bg">

            <TextView
                android:id="@+id/item_dishes_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/distance_10"
                android:layout_marginBottom="@dimen/distance_15"
                android:textSize="@dimen/textsize_xxxbig"
                android:textColor="@color/white"
                android:text="15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/distance_20"
                android:layout_toLeftOf="@+id/item_dishes_price"
                android:textSize="@dimen/textsize_xxlarge"
                android:textColor="@color/white"
                android:text="￥"
                />

        </RelativeLayout>
        <ImageView
            android:id="@+id/item_dishes_image"
            android:layout_width="120dip"
            android:layout_height="136dip"
            android:layout_below="@+id/item_dishes_describe"
            android:layout_marginTop="@dimen/distance_10"
            android:layout_alignParentLeft="true"
            android:visibility="gone"/>
    </RelativeLayout>