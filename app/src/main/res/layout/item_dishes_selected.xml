<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@anim/bg_corner_item_dishes_selected"
    >
        <TextView
            android:id="@+id/item_dishess_selected_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_80"
            android:layout_marginTop="@dimen/distance_20"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_5"
            android:textSize="@dimen/textsize_xxlarge"
            android:textColor="@color/item_dishes_selected_name_text"
            android:text="牛腩"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_dishes_selected_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_dishess_selected_name"
            android:layout_marginTop="@dimen/distance_15"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_5"
            android:textSize="@dimen/textsize_large"
            android:singleLine="true"
            android:textColor="@color/item_dishes_selected_name_text"
            android:text="铁砂黑锅"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_disehs_selected_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/item_dishess_selected_name"
            android:layout_marginTop="@dimen/distance_15"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/item_dishes_selected_name_text"
            android:text="￥"
            />
        <TextView
            android:id="@+id/item_dishes_selected_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_disehs_selected_price_icon"
            android:layout_below="@+id/item_dishes_selected_describe"
            android:layout_marginTop="@dimen/distance_15"
            android:textSize="@dimen/textsize_big"
            android:textColor="@color/item_dishes_selected_name_text"
            android:text="40"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_dishes_selected_price"
                android:layout_below="@+id/item_dishes_selected_describe"
                android:layout_marginTop="@dimen/distance_25"
                android:textSize="@dimen/textsize_large"
                android:textColor="@color/item_dishes_selected_name_text"
                android:text="/份"/>

    <Button
        android:id="@+id/item_disehs_selected_minus"
        android:layout_width="65dip"
        android:layout_height="63dip"
        android:background="@anim/selector_btn_item_dishes_minus"
        android:layout_below="@+id/item_disehs_selected_price_icon"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginTop="@dimen/distance_20"
        />

    <LinearLayout
        android:id="@+id/item_disehs_selected_num_group"
        android:layout_width="@dimen/distance_60"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/item_disehs_selected_minus"
        android:layout_below="@+id/item_disehs_selected_price_icon"
        android:layout_marginTop="@dimen/distance_15"
        android:layout_marginLeft="@dimen/distance_5">
        android:layout_marginRight="@dimen/distance_5">

        <TextView
            android:layout_width="@dimen/distance_60"
            android:layout_height="wrap_content"
            android:textColor="@color/item_dishes_selected_name_text"
            android:text="数量"
            android:textSize="@dimen/textsize_xxsmall"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_dishes_selected_num"
            android:layout_width="@dimen/distance_60"
            android:layout_height="wrap_content"
            android:textColor="@color/item_dishes_selected_name_text"
            android:textSize="@dimen/textsize_xbig"
            android:text="1"
            android:gravity="center"/>

        </LinearLayout>
    <Button
        android:id="@+id/item_disehs_selected_add"
        android:layout_width="65dip"
        android:layout_height="62dip"
        android:background="@anim/selector_btn_item_dishes_add"
        android:layout_below="@+id/item_disehs_selected_price_icon"
        android:layout_toRightOf="@+id/item_disehs_selected_num_group"
        android:layout_marginTop="@dimen/distance_20"
        />


</RelativeLayout>